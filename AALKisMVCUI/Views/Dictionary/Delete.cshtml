@model AALKisMVCUI.Models.DictionaryModel

<h2>Delete Dictionary Entry</h2>

<h3>Are you sure you want to delete this entry?</h3>

<div>
    <h4>Word: @Model.Word</h4>
    <h4>Meaning: @Model.Meaning</h4>
</div>

@using (Html.BeginForm("DeleteConfirmed", "Dictionary", new { id = Model.Id }, FormMethod.Post))
{
@Html.AntiForgeryToken()
<input type="submit" value="Delete" class="btn btn-danger" />
@Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
}
